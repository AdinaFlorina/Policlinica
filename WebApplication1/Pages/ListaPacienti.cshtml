@page
@using System.Data
@model Policlinica.ListaPacientiModel
@{
    ViewData["Title"] = "ListaPacienti";
}

<h1>Pacienti</h1>

<div class="container-fluid">
    <div class="row">
        @if (Model.Pac != null)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        @foreach (var item in Model.Pac.Columns)
                        {
                            <td>
                                @item.ToString()
                            </td>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow rand in Model.Pac.Rows)
                    {
                        <tr>
                            @foreach (var col in rand.ItemArray)
                            {
                                <td>
                                    @col.ToString();
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h1 class="text-danger">Eroare de preluare a datelor</h1>
        }
    </div>
</div>