@page
@using System.Data
@model Policlinica.ServiciiModel
@{
    ViewData["Title"] = "Servicii";
}

<h1>Servicii</h1>
<div class="container-fluid">
    <div class="row">
            @if (Model.Dep !=null)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                        @foreach( var item in Model.Dep.Columns)
                        {
                            <td>
                                @item.ToString()
                            </td>
                        }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow rand in Model.Dep.Rows)
                        {
                            <tr>
                            @foreach (var col in rand.ItemArray)
                            {
                                <td>
                                    @col.ToString();
                                </td>
                            }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h1 class="text-danger">Eroare de preluare a datelor</h1>
            }
    </div>
</div>
