<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Policlinica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav1 class="navbar border-bottom active box-shadow">
            <div class="alert align-items-lg-end" style="margin-top: 25px;">
                <h6><img src="data:image/png;base64," />Call Center <span>0264 000 000</span></h6>
            </div>
            <h3>Luptăm împreună împotriva răspândirii epidemiei COVID-19 încă din prima zi!</h3>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-hover" asp-page="/Admin/Logout">Logout @User.Identity.Name</a>
            }
            else
            {
                <a class="btn btn-hover" asp-page="/Admin/Login">Login</a>
            }

        </nav1>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">

                    <img src="~/img//logo-100.jpg" /><span> Policlinica GreenLife</span>
                    <style>
                        nav1 {
                            padding-bottom: 8px;
                            background-color: cadetblue;
                            padding-top: 8px;
                            padding-left: 16px;
                            padding-right: 16px;
                        }

                        .body {
                            background-color: #f7f7f7;
                        }

                        .btn-hover {
                            background-color: #4CAF50; /* Green */
                            color: white;
                        }

                            .btn-hover:hover {
                                background-color: darkcyan;
                                color: white;
                            }

                        h5 {
                            color: #A5DF00;
                            border-top: medium;
                            padding-left: 10px;
                        }

                        span {
                            color: #A5DF00;
                            border-top: medium;
                            text-shadow: inherit;
                        }

                        .fa {
                            padding: 20px;
                            font-size: 30px;
                            width: 30px;
                            text-align: center;
                            text-decoration: none;
                            margin: 5px 2px;
                            border-radius: 50%;
                        }

                            .fa:hover {
                                opacity: 0.7;
                            }
                    </style>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <h5>  <a class="nav-link text-dark" asp-area="" asp-page="/Index">Despre noi</a></h5>
                        </li>
                        <li class="nav-item">
                            <h5><a class="nav-link text-dark" asp-page="/Servicii">Servicii</a></h5>
                        </li>
                        <li class="nav-item">
                            <h5><a class="nav-link text-dark" asp-page="/Medici">Medici</a></h5>
                        </li>
                        <li class="nav-item">
                            <h5><a class="nav-link text-dark" asp-page="/Pacienti">Pacienti</a></h5>
                        </li>
                        <li class="nav-item">
                            <script>
                                function scrollDown() {
                                    $('html, body').animate({scrollTop: $("footer").offset().top}, 200);
                                }
                            </script>
                            <h5><a class="nav-link text-dark" href="#" onclick="javascript:scrollDown();">Contact</a></h5>
                        </li>
                        <!-- Dropdown -->
                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Medic") || User.IsInRole("Admin")))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                    Administrare
                                </a>
                                <div class="dropdown-menu">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="dropdown-item" asp-page="/Admin/UpsertDepartament">Administrare departamente</a>
                                        <a class="dropdown-item" asp-page="/Admin/UpsertMedici">Administrare personal medical</a>
                                    }

                                    <a class="dropdown-item" asp-page="/Admin/UpsertPacienti">Administrare pacienti</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>


        </nav>
    </header>
    @RenderBody()
    <footer class="container-fluid bg-4" id="my-footer">
        <style>
            .bg-4 {
                background-color: #f7f7f7;
                color: darkslategray;
            }

            #rcorners2 {
                border-radius: 15px / 50px;
                background: white;
                padding: 40px;
                width: 300px;
                height: 200px;
            }

            #rcorners3 {
                border-radius: 25px / 50px;
                background: white;
                padding: 40px;
                width: 600px;
                height: 300px;
                background-color: darkcyan;
            }
        </style>

        <!-- Container (Contact Section) -->
        <div class="container-fluid bg-grey">
            <br />
            <h4 class="text-center">Informații de contact</h4>
            <br />
            <br />
            <div class="row">
                <div class="col-sm-5">
                    <h5>Policlinica GreenLife</h5>
                    <div id="rcorners2">
                        <p><span><img src="data:image/png;base64," /></span> Cluj Napoca, România</p>
                        <p><span><img src="data:image/png;base64," /></span> +04 755555555</p>
                        <p><span><img src="data:image/png;base64," /></span> greenlife@yahoo.com</p>
                    </div>
                </div>
                <div class="col-sm-7" id="rcorners3">
                    <form method="post" asp-page="/Servicii/Email">
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <input class="form-control" id="name" name="name" placeholder="Nume" type="text" required>
                            </div>
                            <div class="col-sm-6 form-group">
                                <input class="form-control" id="email" name="email" placeholder="Email" type="email" required>
                            </div>
                        </div>
                        <textarea class="form-control" id="comments" name="comments" placeholder="Trimite un mesaj" rows="5"></textarea><br>
                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <button class="btn btn-primary btn-hover" type="submit">Trimite</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="container text-center">
            &copy; 2020 - Policlinica GreenLife - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
